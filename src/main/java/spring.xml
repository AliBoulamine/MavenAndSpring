<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="alien" class="com.aaeetii.projetmaven.Alien">
		<constructor-arg value="12"></constructor-arg><!-- Constructor injection: recommand to be use when the variable is not optional-->
		<property name="laptop" ref="laptop"></property><!-- Setter injection: recommand to be use when the variable is optional -->
	</bean>
	
	<bean id="laptop" class="com.aaeetii.projetmaven.Laptop"></bean>

</beans>